{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2020"],
    "module": "Preserve",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "@0no-co/graphqlsp",
        "schema": "./schema.graphql"
      }
    ]
  },
  "exclude": ["node_modules", ".eslintrc.js"],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}
